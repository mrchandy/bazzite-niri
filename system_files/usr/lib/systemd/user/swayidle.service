[Unit]
Description=Idling daemon
PartOf=graphical-session.target
After=graphical-session.target

[Service]
ExecStart=/usr/bin/swayidle -w timeout 601 'niri msg action power-off-monitors' timeout 600 'dms ipc call lock lock' before-sleep 'dms ipc call lock lock'
Restart=on-failure
RestartSec=1

[Install]
WantedBy=graphical-session.target
